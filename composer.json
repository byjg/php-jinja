{
  "name": "byjg/jinja-php",
  "description": "Jinja for PHP",
  "type": "library",
  "require": {
    "php": ">=8.1 <8.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5|^11.5",
    "vimeo/psalm": "^5.9|^6.2"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "ByJG\\JinjaPhp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm"
  },
  "minimum-stability": "dev"
}
